<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nazvanie"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/categoriesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Категории услуг"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@id/titleTextView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <GridLayout
        android:id="@+id/categoryGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoriesTextView"
        android:columnCount="3"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/categoryButton1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_backgroun"
            android:padding="8dp"
            android:gravity="end|bottom"
            android:text="Категория 1"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/categoryButton2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_backgroun"
            android:padding="8dp"
            android:gravity="end|bottom"
            android:text="Категория 2"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/categoryButton3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_backgroun"
            android:padding="8dp"
            android:gravity="end|bottom"
            android:text="Категория 3"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/categoryButton4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_backgroun"
            android:padding="8dp"
            android:gravity="end|bottom"
            android:text="Категория 4"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/categoryButton5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_backgroun"
            android:padding="8dp"
            android:gravity="end|bottom"
            android:text="Категория 5"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/categoryButton6"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_backgroun"
            android:padding="8dp"
            android:gravity="end|bottom"
            android:text="Категория 6"
            android:textColor="#000000"
            android:textSize="14sp" />
    </GridLayout>

    <TextView
        android:id="@+id/contactsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="306dp"
        android:layout_marginBottom="16dp"
        android:text="Контактная информация"
        android:textColor="#000000"
        android:textSize="20sp" />

    <WebView
        android:id="@+id/webview"
        android:layout_width="376dp"
        android:layout_height="139dp"
        android:layout_below="@id/categoryGrid"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="165dp" />


    <TextView
        android:id="@+id/adresTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="620dp"
        android:layout_marginBottom="16dp"
        android:text="г. Москва..."
        android:textColor="#000000"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="Главная"
            android:textColor="#000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/garageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="Гараж"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/accountButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="Аккаунт"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/orderButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="Заказы"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>
