<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Шапка профиля -->
    <LinearLayout
        android:id="@+id/profileHeader"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#CAD6FF"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Аккаунт"
            android:textColor="#2260FF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Аватар поверх шапки и основного контента -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/avatarCard"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="65dp"
        app:strokeColor="#A9BCFE"
        app:strokeWidth="2dp"
        app:elevation="6dp"
        android:layout_alignTop="@id/profileHeader">

        <ImageView
            android:id="@+id/profileImageView"
            android:background="@drawable/circle_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"/>
    </com.google.android.material.card.MaterialCardView>


    <!-- Основной контент -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profileHeader"
        android:paddingTop="80dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Карточка информации -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:elevation="2dp"
                app:strokeColor="#A9BCFE"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/usernameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#2260FF"/>

                    <TextView
                        android:id="@+id/emailTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="#282828"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/infoButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="24dp"
                        android:text="Подробная информация"
                        android:textColor="#2260FF"
                        app:strokeColor="#66AACDFF"
                        app:strokeWidth="1dp"
                        app:backgroundTint="@color/light_blue_transparent"
                        app:cornerRadius="24dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Кнопка выхода -->
            <LinearLayout
                android:id="@+id/addCarButtonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="150dp"
                android:gravity="center"
                android:padding="5dp">

                <Button
                    android:id="@+id/logoutButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Выйти"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:backgroundTint="@color/blue"
                    app:cornerRadius="24dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Нижняя навигация -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_nav_background"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Главная -->
        <TextView
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Главная"
            android:textColor="#8A8A8A"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <!-- Гараж -->
        <TextView
            android:id="@+id/garageButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Гараж"
            android:textColor="#8A8A8A"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <!-- Аккаунт -->
        <TextView
            android:id="@+id/accountButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Аккаунт"
            android:textColor="#2260FF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <!-- Заказы -->
        <TextView
            android:id="@+id/orderButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Заказы"
            android:textColor="#8A8A8A"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

</RelativeLayout>