<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Основной контент -->
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:orientation="vertical">

        <TextView
            android:id="@+id/garageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Гараж"
            android:textColor="#2260FF"
            android:textSize="24sp"
            android:fontFamily="@font/nunitosans_bold" />

        <LinearLayout
            android:id="@+id/emptyStateContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_empty_garage"
                android:contentDescription="Пустой гараж"
                android:tint="#CAD6FF"/>

            <TextView
                android:id="@+id/pustoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="Пока пусто"
                android:textColor="#2260FF"
                android:textSize="20sp"
                android:fontFamily="@font/nunitosans_semibold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Добавьте свой первый автомобиль"
                android:textColor="#999999"
                android:textSize="16sp"
                android:fontFamily="@font/nunitosans_regular"/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/carContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <!-- Кнопка добавления автомобиля -->
        <LinearLayout
            android:id="@+id/addCarButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp">

            <Button
                android:id="@+id/addCarButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавить автомобиль"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/nunitosans_semibold"
                app:backgroundTint="@color/blue"
                app:cornerRadius="24dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Нижнее меню -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_nav_background"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Главная"
            android:fontFamily="@font/nunitosans_semibold"
            android:textColor="@color/grey_blue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/garageButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Гараж"
            android:textColor="#2260FF"
            android:textSize="18sp"
            android:fontFamily="@font/nunitosans_bold" />

        <TextView
            android:id="@+id/accountButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Аккаунт"
            android:fontFamily="@font/nunitosans_semibold"
            android:textColor="@color/grey_blue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/orderButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Заказы"
            android:fontFamily="@font/nunitosans_semibold"
            android:textColor="@color/grey_blue"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>